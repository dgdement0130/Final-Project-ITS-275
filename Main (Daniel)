class House{
	public void type() {
		System.out.println("This will be a loan for an average sized house.");
	}
}
class Features extends House{
	public void options(){
		System.out.println("I want a screened in porch.");
	}
	Features(){
		super();
		System.out.println("Screened in porch selection saved."); //using super keyword to call 'House' class constructor req. 15
	}
	public void type(){
		System.out.println("I want to look at other options."); //lines 25-35(method overriding) - req. 11
}
System.out.println("With my current budget, can this house be an option?");
String price;
	int budget = 250000 , house = one.next();
	price = budget==house ? "Yes":"No"; //conditional operator using input from user to determine if price meets budget req. 5
	System.out.println("Ans: "+ price);
